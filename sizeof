#include<iostream>
using namespace std;
int main()
{   cout<<"The size of int data type is:";
    cout<<sizeof(int)<<endl;
    cout<<"The size of char data type is:";
    cout<<sizeof(char)<<endl;
    cout<<"The size of float data type is:";
    cout<<sizeof(float)<<endl;
    cout<<"The size of double data type is:";
    cout<<sizeof(double)<<endl;
    cout<<"The size of long data type is:";
    cout<<sizeof(long)<<endl;
    return 0;
}
    
